<% include partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header"> Edit
            <%= blog.title%>!!</div>
        <form class="ui form" action="/blogs/<%=blog._id %>?_method=PUT" method="POST">

            <div class="field">
                <label for="">Blog Title</label>
                <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                <label for="">Image</label>
                <input type="text" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
                <label for="">Blog Content</label>
                <textarea name="blog[body]"><%=blog.body%> </textarea>
            </div>
            <!--<input class="ui violet inverse button" type="submit">-->
            <button class="ui violet big basic button">Submit!</button>

        </form>
    </div>

    <% include partials/footer %>